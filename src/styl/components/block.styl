/*----------------------------------------------------------------------------*
	$C-BLOCK
*----------------------------------------------------------------------------*/


/* ^.c-block-1
-----------------------------------------------------------------------------*/

.c-block-1

	position: relative
	margin-bottom: 50px


.c-block-1__container
	overflow: hidden
	position: relative
	z-index: 3
	border-radius: 5px
	box-shadow: 0 0 7px 0 rgba(#2D3E50, .10);
	background: #fff

	+min('xl')
		col(13,20,$g:0)


.c-block-1__container-2
	padding-top: 30px
	// background: #ad3acb

	+min('xl')
		col(7,20,$g:0)

	+max('xl')
		width: 100%
		max-width: 380px
		margin: 0 auto




.c-block-1__item
	position: relative
	padding: 20px 20px 10px 20px
	border-bottom: 1px solid #EBEEF0

	+min('l')
		padding: 30px 40px 10px 40px


.c-block-1__item--v2
	@extends .c-block-1__item
	padding-top: 14px
	padding-bottom: 15px
	border-bottom: none
	background: #dee3e7
	text-align: center

	.c-block-1__item-title
		+max('m')
			font-size: 2.2rem


.c-block-1__subitem
	padding-top: 12px


.c-block-1__step
	position: absolute
	top: 20px
	left: -14px

	+min('l')
		top: 24px
		left: -17.5px


.c-block-1__heading
	margin-bottom: 20px


.c-block-1__text-intro
	margin-bottom: 20px
	font-size: 1.5rem
	font-weight: $medium


.c-list-2__subitems
	font-size: 1.4rem

	&:after
		content: ', '

	&:last-child
		&:after
			content: ''


.c-block-1__price
	margin-top: 15px
	margin-bottom: 10px
	font-weight: $medium
	font-size: 1.7rem
	color: $base2-color

/* ^Fin - .c-block-1
-----------------------------------------------------------------------------*/




.tooltip
	position: absolute;
	z-index: 1070;
	display: block;
	// font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-size: 12px;
	font-style: normal;
	font-weight: 400;
	line-height: 1.42857143;
	text-align: left;
	text-align: start;
	text-decoration: none;
	text-shadow: none;
	text-transform: none;
	letter-spacing: normal;
	word-break: normal;
	word-spacing: normal;
	word-wrap: normal;
	white-space: normal;
	opacity: 0;
	line-break: auto;


.tooltip.in
	opacity: 1

.tooltip.top
	padding: 5px 0


.tooltip-inner
	max-width: 200px;
	padding: 3px 8px;
	color: #fff;
	text-align: center;
	background-color: $base2-color
	border-radius: 4px;
	font-size: 1.4rem
	font-weight: $medium


.slider.slider-horizontal
	width: 100%


.slider-selection
	background: $base2-color


.slider-handle
	background-color: $base-color
	background-image: none
