/* ^.c-list
-----------------------------------------------------------------------------*/

// ul
.c-list
	align-items: flex-start
	grid($justify:'start', $g:0)

	> li
		margin-bottom: 20px

		+min('l')
			col(1,2)


// ul
// .c-list
