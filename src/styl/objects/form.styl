/*----------------------------------------------------------------------------*
	$O-FORM
*----------------------------------------------------------------------------*/


/* ^.o-form-field
-----------------------------------------------------------------------------*/

.o-form-field
	appearance: none
	width: 100%
	height: 40px
	padding: 0 15px
	border: 1px solid #CBD6E2
	outline: 0
	border-radius: 5px
	background: #F5F8FA
	font-size: 1.7rem
	font-weight: $medium
	color: $base2-color
	transition: all .2s ease

	&:focus
		border-color: #35B4DB
		box-shadow: 0 0 6px 0 rgba(#35B4DB,.60)


.o-form-field--dark
	@extend .o-form-field
	background: lighten($base2-color, 13%)
	border-color: lighten($base2-color, 23%)
	color: #fff
	font-size: 1.6rem
	placeholder(lighten($base2-color, 60%))

	&:focus
		border-color: $base-color
		box-shadow: 0 0 6px 0 rgba($base-color,.50)




.o-form-field--dark-center
	@extends .o-form-field--dark
	text-align: center


/* ^Fin - .o-form-field
-----------------------------------------------------------------------------*/





/* ^.o-form-number
-----------------------------------------------------------------------------*/

input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button
	appearance: none
	margin: 0


input[type="number"]
	-moz-appearance: textfield


.o-form-number
	display: flex
	align-items: center

	[class*="icon"]
		font-size: 2rem
		color: $base2-color
		cursor: pointer
		transition: all .2s ease

		&:hover
			color: $base-color




.o-form-number__field
	@extend .o-form-field
	width: 100px
	margin: 0 10px
	text-align: center

/* ^Fin - .o-form-number
-----------------------------------------------------------------------------*/





/* ^.o-form-check
-----------------------------------------------------------------------------*/

// Contenedor del check
.o-form-check
	display: flex


// input
.o-form-check__campo
	display: none

	& + label,
	& + span + label
		position: relative
		display: block
		width: 20px
		height: @width
		margin-right: 12px
		font-family: 'icomoon' !important;
		font-size: 2rem
		speak: none;
		font-style: normal;
		font-weight: normal;
		font-variant: normal;
		text-transform: none;
		line-height: 1;
		font-smoothing()
		color: $base2-color
		cursor: pointer

		& + span
			padding-top: 1px
			font-size: 1.6rem
			color: $base2-color
			font-weight: $medium

		&:hover
			color: $base-color

	// Icono checkbox
	&[type="checkbox"] + label,
	&[type="checkbox"] + span + label
		&:before
			content: "\ee6f"

	// Icono radio
	&[type="radio"] + label,
	&[type="radio"] + span + label
		&:before
			content: "\ee73"

	// Cuando el estado es checked
	&:checked
		& + label
			color: $base-color

			&:hover
				&:before
					color: darken($base-color, 6)

		// Icono checkbox
		&[type="checkbox"] + label
			&:before
				content: "\ee6e"

		// Icono radio
		&[type="radio"] + label
			&:before
				content: "\ee76"

/* ^Fin - .o-form-check
-----------------------------------------------------------------------------*/





